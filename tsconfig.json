{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "module": "es6",
        "lib": ["es6"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "jsx": "react",
        "allowJs": true
    },
    "exclude": ["node_modules"]
}
